[[recipes]]
name = "Egg Sandwich with Mushroom Hash"
ingredients = """2 tsp butter
1 small potato, diced
1/2 lb mushrooms, sliced
2 cloves garlic, finely chopped
2 eggs
salt and pepper
2 rolls, 2 English muffins, or 4 slices of bread

additions:
tomato, sliced
avocado
cheese

