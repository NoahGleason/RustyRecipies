[[recipes]]
name = "Poutine"
ingredients = """2-3 medium Russet potatoes, sliced into sticks
2 tbsp vegetable oil
salt and pepper
scallions, chopped
6 oz fresh mozzarella, diced

gravy:
2 tbsp butter
1 shallot or 3 scallions, finely chopped
3 cloves garlic, finely chopped
