[[recipes]]
name = "Lightly Curried Butternut Squash Soup"
ingredients = """1 butternut squash or other winter squash
1 tbsp butter
1 medium onion, diced
1 green bell pepper, diced
3 cloves garlic, finely chopped
1 tsp cumin powder
1 tsp coriander powder
1 tsp turmeric powder
1 tsp cayenne pepper
1 can coconut milk
3 cups water
salt and pepper

